{{>layout/header}}
<h1> 게시글 수정 </h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">상품 번호</label>
                <input type="text" class="form-control" id="p_id" value="{{products.p_id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">상품 이름</label>
                <input type="text" class="form-control" id="p_name" value="{{products.p_name}}">
            </div>
            <div class="form-group">
                <label for="author">상품 내용</label>
                <input type="text" class="form-control" id="p_desc" value="{{products.p_desc}}">
            </div>
            <div class="form-group">
                <label for="content">상품 가격</label>
                <input type="text" class="form-control" id="p_price" value="{{products.p_price}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>
{{>layout/footer}}